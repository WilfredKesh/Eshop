<div class="container">
  <h2 class="center big-title">Your Listings</h2> 

   <table class="table table-striped table-bordered">
  <tr>
    <th class="center seller-heading">Image</th>
    <th class="center seller-heading">Name</th>
    <th class="center seller-heading">Description</th>
    <th class="center seller-heading">Price</th>
    <th class="center seller-heading">Action</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td class="seller-row"><%= image_tag listing.image.url(:thumb) %></td>
      <td class="seller-row"><%= listing.name %></td>
      <td class="seller-row"><%= listing.description %></td>
      <td class="seller-row"><%= number_to_currency(listing.price) %></td>
      <td class="valign">
         <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Action<span class="caret"></span>            
          </button> 
           <ul class="dropdown-menu" role="menu">
             <li><%= link_to "View", listing, class: "btn btn-link" %></li>
             <li><%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %></li> 
             <li> <%= link_to 'Destroy', listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li> 

           </ul>
             
           </div>
     

      </td>
    </tr>
  <% end %>
</table>
   

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
  
</div>